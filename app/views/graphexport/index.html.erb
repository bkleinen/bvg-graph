<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Route identifier</th>
      <th>Agency identifier</th>
      <th>Route short name</th>
      <th>Route long name</th>
      <th>Route type</th>
      <th>Route color</th>
      <th>Route text color</th>
      <th>Route desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.route_identifier %></td>
        <td><%= route.agency_identifier %></td>
        <td><%= route.route_short_name %></td>
        <td><%= route.route_long_name %></td>
        <td><%= route.route_type %></td>
        <td><%= route.route_color %></td>
        <td><%= route.route_text_color %></td>
        <td><%= route.route_desc %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

